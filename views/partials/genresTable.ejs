<div class="table">
	<table class="table__element">
		<colgroup>
			<col class="table__col table__col-genre" />
			<col class="table__col table__col-count" />
		</colgroup>
		<thead class="table__header">
			<tr class="table__row table__row--header">
				<th class="table__header-cell">Genre</th>
				<th class="table__header-cell">Books</th>
			</tr>
		</thead>
		<tbody class="table__body">
			<% genres.map((genre) => { %>
			<tr class="table__row">
				<td class="table__cell">
					<a href="/genres/<%= genre.id %>/<%= genre.slug %>" class="table__link"
						><%= genre.name %></a
					>
				</td>
				<td class="table__cell text-centre"><%= genre.number_of_books %></td>
			</tr>
			<% }) %>
		</tbody>
	</table>
</div>
