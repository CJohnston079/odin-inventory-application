<div class="table">
	<table class="table__element">
		<caption class="table__caption">
			<%= typeof caption !== 'undefined' ? caption : "" %>
		</caption>
		<colgroup>
			<col class="table__col table__col-year" />
			<col class="table__col table__col-count" />
		</colgroup>
		<thead class="table__header">
			<tr class="table__row table__row--header">
				<th class="table__header-cell">Decade</th>
				<th class="table__header-cell">Books</th>
			</tr>
		</thead>
		<tbody class="table__body">
			<% centuries[century].map((decade) => { %>
			<tr class="table__row">
				<td class="table__cell">
					<a href="decades/<%= decade.decade %>s" class="table__link"><%= decade.decade %>s</a>
				</td>
				<td class="table__cell text-centre"><%= decade.number_of_books %></td>
			</tr>
			<% }) %>
		</tbody>
	</table>
</div>
