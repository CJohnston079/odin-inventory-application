<div class="table">
	<table class="table__element">
		<colgroup>
			<col class="table__col table__col-author" />
			<col class="table__col table__col-count" />
			<col class="table__col table__col-year" />
			<col class="table__col table__col-country" />
			<col class="table__col table__col-genres" />
		</colgroup>
		<thead class="table__header">
			<tr class="table__row table__row--header">
				<th class="table__header-cell">Author</th>
				<th class="table__header-cell">Books</th>
				<th class="table__header-cell">Born</th>
				<th class="table__header-cell">Nationality</th>
				<th class="table__header-cell">Genres</th>
			</tr>
		</thead>
		<tbody class="table__body">
			<% authors.map(author => { %>
			<tr class="table__row">
				<td class="table__cell">
					<a href="authors/<%= author.id %>/<%= author.slug %>" class="table__link"
						><%= author.name %></a
					>
				</td>
				<td class="table__cell text-centre"><%= author.number_of_books %></td>
				<td class="table__cell text-centre">
					<a href="decades/<%= Math.floor(author.birth_year / 10) %>0s" class="table__link"
						><%= author.birth_year %></a
					>
				</td>
				<td class="table__cell">
					<a
						href="countries/<%= author.country_id %>/<%= author.country_slug %>"
						class="table__link"
						><%= author.nationality %></a
					>
				</td>
				<%- include("./genresColumn", { genres: author.genres }) %>
			</tr>
			<% }) %>
		</tbody>
	</table>
</div>
