<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Inventory | <%= title %></title>
		<link rel="shortcut icon" href="/assets/logo.svg" type="image/x-icon" />
		<link rel="stylesheet" href="/sass/main.css" />
		<script type="module" src="/scripts/form-handlers/newAuthorFormHandler.js"></script>
	</head>
	<body class="site">
		<div id="root" class="site__wrapper">
			<%- include("../partials/header", { backAnchor: true }) %>
			<main class="site__content">
				<h1><%= title %></h1>
				<form action="/authors" method="post" id="new-author" class="form">
					<fieldset id="name" class="form__fieldset">
						<div class="form__field">
							<label class="form__label" for="first-name">First name*</label>
							<input
								class="form__input form__input--alphanum"
								type="text"
								name="firstName"
								id="first-name"
								required
							/>
							<div class="form__field-message display-none">
								<img src="/assets/icons/warning.png" alt="" class="icon icon--warning" />
								<span class="form__field-message-content"></span>
							</div>
						</div>
						<div class="form__field">
							<label class="form__label" for="last-name">Surname*</label>
							<input
								class="form__input form__input--alphanum"
								type="text"
								name="lastName"
								id="last-name"
								required
							/>
							<div class="form__field-message display-none">
								<img src="/assets/icons/warning.png" alt="" class="icon icon--warning" />
								<span class="form__field-message-content"></span>
							</div>
						</div>
						<div class="form__field-message display-none">
							<img src="/assets/icons/warning.png" alt="" class="icon icon--warning" />
							<span class="form__field-message-content"></span>
						</div>
					</fieldset>
					<div class="form__field">
						<label class="form__label" for="nationality">Nationality*</label>
						<input
							class="form__input form__input--alphanum"
							type="text"
							name="nationality"
							id="nationality"
							placeholder="Start typing to show suggestions"
							required
						/>
						<ul id="nationality-suggestions" class="form__input-suggestions"></ul>
						<div class="form__field-message display-none">
							<img src="/assets/icons/warning.png" alt="" class="icon icon--warning" />
							<span class="form__field-message-content"></span>
						</div>
					</div>
					<div class="form__field">
						<label class="form__label" for="birth-year">Birth year</label>
						<input
							class="form__input form__input--alphanum"
							type="number"
							name="birthYear"
							id="birth-year"
							max="<%= new Date().getFullYear() %>"
						/>
						<div class="form__field-message display-none">
							<img src="/assets/icons/warning.png" alt="" class="icon icon--warning" />
							<span class="form__field-message-content"></span>
						</div>
					</div>
					<div class="form__field">
						<label class="form__label" for="biography">Biography</label>
						<textarea
							class="form__input form__input--alphanum form__input--textarea"
							name="biography"
							id="biography"
							cols="40"
							rows="5"
						></textarea>
						<span class="form__char-count">0/280</span>
						<div class="form__field-message display-none">
							<img src="/assets/icons/warning.png" alt="" class="icon icon--warning" />
							<span class="form__field-message-content"></span>
						</div>
					</div>
					<button type="submit" class="form__button form__button--submit">Add author</button>
				</form>
			</main>
		</div>
	</body>
</html>
